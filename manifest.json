{
  "name": "The New Tap Opener 1.0",
  "description": "Open multiple tabs for link in HackerNews",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "openTabs.html",
    "default_icon": {
      "16": "/images/favicon-32x32.png",
      "32": "/images/favicon-32x32.png",
      "48": "/images/favicon-32x32.png",
      "128": "/images/favicon-32x32.png"
    }
  },
  "icons": {
    "16": "/images/favicon-32x32.png",
    "32": "/images/favicon-32x32.png",
    "48": "/images/favicon-32x32.png",
    "128": "/images/favicon-32x32.png"
  }
}
